{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "schedule": [
    "after 11pm and before 5am every weekday",
    "every weekend"
  ],
  "dependencyDashboard": true,
  "pin": {
    "automerge": true
  },
  "packageRules": [
    {
      "automerge": true,
      "major": {
        "automerge": false
      }
    }
  ]
}