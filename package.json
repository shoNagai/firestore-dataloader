    "apollo-server-testing": "^2.21.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "semi": true,
    "printWidth": 120,
    "trailingComma": "es5"
